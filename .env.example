# Database (Supabase Postgres)
# Use 2 URLs:
# - DATABASE_URL: POOLED / Transaction mode (recommended for Vercel runtime)
# - DIRECT_URL:  DIRECT / Session mode (required for Prisma migrate)
#
# Get both from: Supabase -> Project Settings -> Database -> Connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:6543/postgres?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/postgres"

# JWT
JWT_SECRET="replace-with-long-random-secret"

# Optional
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional (bootstrap admin user)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"

# Webhook secrets (sent via header: x-webhook-secret)
WEBHOOK_SECRET_SHOPEE="replace-with-random-secret"
WEBHOOK_SECRET_TIKTOK="replace-with-random-secret"

# Realtime notifications (Pusher)
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="ap1"

NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER="ap1"

# Stock alert
LOW_STOCK_THRESHOLD=5
